<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #CCE6FF;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gsix.ATIS.client.systemmanager.AddComPageBoundary">
    <children>
        <!-- ListView for displaying communities -->
        <ListView fx:id="communityListView" layoutX="10.0" layoutY="10.0" prefHeight="250.0" prefWidth="580.0" />

        <!-- Label and TextField for Community Name -->
        <Label layoutX="10.0" layoutY="270.0" text="Community Name:" />
        <TextField fx:id="communityNameTF" layoutX="130.0" layoutY="270.0" prefWidth="200.0" />

        <!-- Label and TextField for Manager ID -->
        <Label layoutX="10.0" layoutY="310.0" text="Manager ID:" />
        <TextField fx:id="managerIdTF" layoutX="130.0" layoutY="310.0" prefWidth="200.0" />

        <!-- Button to add new community -->
        <Button fx:id="addCommunityBtn" layoutX="130.0" layoutY="350.0" mnemonicParsing="false" onAction="#sendmsg" prefHeight="29.0" prefWidth="120.0" style="-fx-background-color: #28a745;" text="Add Community" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <Button fx:id="back_Btn" layoutX="8.0" layoutY="348.0" mnemonicParsing="false" onAction="#goBack" prefHeight="29.0" prefWidth="106.0" style="-fx-background-color: #00246B;" text="Back" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
